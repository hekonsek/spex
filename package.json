{
  "name": "spex",
  "version": "0.11.0",
  "description": "AI-friendly projects specifications",
  "license": "MIT",
  "type": "module",
  "bin": {
    "spex": "dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && chmod +x dist/cli/cli.js",
    "check": "tsc --noEmit",
    "test:build": "tsc --outDir \"${TMPDIR:-/tmp}/spex-test-build\" --rootDir . --module NodeNext --moduleResolution NodeNext --target ES2022 --lib ES2022 --strict --noUncheckedIndexedAccess --exactOptionalPropertyTypes --skipLibCheck $(find src test -name '*.ts' -print)",
    "test": "npm run test:build && node --test \"${TMPDIR:-/tmp}/spex-test-build/test/**/*.test.js\"",
    "start": "node dist/cli/cli.js",
    "dev": "npm run build && npm run start",
    "release": "npm version minor && git push --follow-tags",
    "install-latest": "npm install -g https://github.com/hekonsek/spex/archive/refs/tags/v${npm_package_version}.tar.gz"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "minimatch": "^10.2.2",
    "ora": "^9.3.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "typescript": "^5.9.3"
  }
}
